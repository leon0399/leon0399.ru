{
  "presets": [
    [
      "next/babel",
      {
        "preset-react": {
          "runtime": "automatic",
          "importSource": "@emotion/react"
        },
        "preset-env": {
          "modules": "auto", // or "commonjs" if your environment doesn't support ES modules
          "targets": {
            "browsers": "> 0.25%, not dead"
          }
        }
      }
    ]
  ],
  "plugins": [
    "@emotion/babel-plugin",
    "babel-plugin-twin",
    "babel-plugin-macros"
  ]
}
